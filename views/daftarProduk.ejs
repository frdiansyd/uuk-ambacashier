<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Daftar Produk</title>
    <style>
        button,
        .button {
            display: block;
            width: 100%;
            height: 50px;
            padding: 8px;
            margin-top: 10px;
            background-color: #1a0b0b;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
        }
    </style>
    <link rel="stylesheet" href="/css/style.css">

</head>

<body>
    <%- include('layout/alert', { title: 'Daftar Produk' , bodyClass: 'daftar-produk-wrapper' }) %>
        <%- include('layout/sidebar') %>

            <h1 style="font-family: 'David Libre', serif; font-size:38px; font-weight:400;margin:25px 0px;">Daftar Barang</h1>
            <div class="container">
                <% produkList.forEach(produk=> { %>
                    <div class="card-item">
                        <img src="/image/<%= produk.foto %>" alt="Foto Produk" width="100" height="100">
                        <div class="card-item-info">
                            <p style="font-family: 'David Libre', serif; font-size:32px ;margin: 6px 0px;"><%= produk.namaProduk %></p>
                            <p style="display: flex; justify-content: space-between;"><strong>Kategori :</strong><span class="kategori-badge kategori-<%= produk.kategori %>"><%= produk.kategori %></span></p>
                            <p style="display: flex; justify-content: space-between;"><strong>Stok :</strong><%= produk.stok %></p>
                            <div class="divider"></div>
                                <p style="font-weight: 800;font-size: 24px;display: flex;justify-content:start;">Rp <%= produk.harga.toLocaleString() %></p>
                                <p   p style="opacity: 0.8; margin: 10px 0px;font-size: 14px;"><%= produk.deskripsi %></p>
                        </div>
                        <div>
                            <a href="/produk/edit/<%= produk._id %>" class="button btn-green"></i> Update</a>
                            <a onclick="deleteProduk('<%= produk._id %>')" class="button btn-red"></i> Hapus</a>
                        </div>
                    </div>
                    <% }); %>
            </div>
</body>
    <script>
        async function deleteProduk(id) {
            const result = await confirmMessage(
                'Hapus file?'
            );

            if (result.isConfirmed) {
                window.location.href = `/produk/delete/${id}`;
            }
        }
    </script>

</html>